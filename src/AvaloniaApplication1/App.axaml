<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApplication1.App"
             xmlns:local="using:AvaloniaApplication1"
             xmlns:viewModels="clr-namespace:Zafiro.Avalonia.FileExplorer.NextGen.Core.ViewModels;assembly=Zafiro.Avalonia.FileExplorer.NextGen"
             xmlns:dialogs="clr-namespace:Zafiro.Avalonia.Dialogs;assembly=Zafiro.Avalonia.Dialogs"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <dialogs:Dialog.Templates>
        <DataTemplate DataType="viewModels:CreateDirectoryViewModel">
            <Border Width="250" Height="80">
                <TextBox VerticalAlignment="Center" Text="{Binding DirectoryName}" />
            </Border>
        </DataTemplate>
    </dialogs:Dialog.Templates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Zafiro.Avalonia.FileExplorer.NextGen/Styles.axaml" />
        <StyleInclude Source="avares://Zafiro.Avalonia/Styles.axaml" />
        <StyleInclude Source="avares://Zafiro.Avalonia.Dialogs/Styles.axaml" />
    </Application.Styles>
</Application>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaApplication1.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.Views.TestView"
             x:CompileBindings="True"
             x:DataType="viewModels:TestViewModel">
    <DockPanel>
        <Button Command="{Binding Copy}" Content="Copy" />
        <Button Content="...">
            <Button.Flyout>
                <Flyout>
                    <ProgressBar Maximum="1" Value="{Binding Progress^}" />
                </Flyout>
            </Button.Flyout>
        </Button>
        <ProgressBar Maximum="1" Value="{Binding Progress^}" Width="100" />
    </DockPanel>
</UserControl>

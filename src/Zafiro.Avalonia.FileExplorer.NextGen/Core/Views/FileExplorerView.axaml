<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:nextGen="clr-namespace:Zafiro.Avalonia.FileExplorer.NextGen"
             xmlns:views="clr-namespace:Zafiro.Avalonia.FileExplorer.NextGen.Views"
             mc:Ignorable="d" d:DesignWidth="400"
             x:Class="Zafiro.Avalonia.FileExplorer.NextGen.Views.FileExplorerView"
             x:DataType="nextGen:FileExplorer"
             x:CompileBindings="True">
    
    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0" />
        </Style>
        <Style Selector="ListBoxItem CheckBox">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="8 0 0 0" />
        </Style>
    </UserControl.Styles>
    
    <DockPanel>
        <views:PathNavigatorView DataContext="{Binding PathNavigator}" DockPanel.Dock="Top" />
        <views:ToolBarView DataContext="{Binding ToolBar}" DockPanel.Dock="Top" />
        <views:DirectoryContentsView DataContext="{Binding Contents}" />
    </DockPanel>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Zafiro.Avalonia.FileExplorer.NextGen.ViewModels"
             xmlns:views="clr-namespace:Zafiro.Avalonia.FileExplorer.NextGen.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:c="clr-namespace:Zafiro.Avalonia.Controls;assembly=Zafiro.Avalonia"
             xmlns:viewModels1="clr-namespace:Zafiro.Avalonia.FileExplorer.NextGen.Core.ViewModels"
             x:Class="Zafiro.Avalonia.FileExplorer.NextGen.Views.DirectoryContentsView"
             x:CompileBindings="True"
             x:DataType="viewModels:DirectoryContentsViewModel">
    
    <UserControl.DataTemplates>
        <DataTemplate DataType="viewModels:FileViewModel">
            <views:FileItemView />
        </DataTemplate>
        <DataTemplate DataType="viewModels1:DirectoryViewModel">
            <views:DirectoryItemView />
        </DataTemplate>
    </UserControl.DataTemplates>
    
    <ListBox Theme="{StaticResource EasyListBox}" Selection="{Binding Selection}" c:Selection.EnableCheckBoxes="True" ItemsSource="{Binding Items}" />
    
</UserControl>
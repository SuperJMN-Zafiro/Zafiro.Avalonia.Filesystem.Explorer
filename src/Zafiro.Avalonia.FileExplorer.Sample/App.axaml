<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sample="clr-namespace:Zafiro.Avalonia.FileExplorer.Sample"
             x:Class="Zafiro.Avalonia.FileExplorer.Sample.App"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Styles>
		<FluentTheme />
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
        <StyleInclude Source="avares://Zafiro.Avalonia.Dialogs/Styles.axaml"/>
        <StyleInclude Source="avares://Zafiro.Avalonia.FileExplorer/Styles.axaml"/>
	</Application.Styles>

	<Application.DataTemplates>
		<sample:ViewLocator />
	</Application.DataTemplates>

</Application>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:folderContents="clr-namespace:Zafiro.Avalonia.FileExplorer.ViewsModes.FolderContents"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Zafiro.Avalonia.FileExplorer.Clipboard.ClipboardView"
             x:DataType="folderContents:DetailsViewModel">
	<StackPanel>
		<Button Content="Copy" IsVisible="{Binding HasSelection^}" Command="{Binding Copy}" />
		<Button Content="Paste" IsVisible="{Binding HasCopiedItems^}" Command="{Binding Paste}" />
	</StackPanel>
</UserControl>

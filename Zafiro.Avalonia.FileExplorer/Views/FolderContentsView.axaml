<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Zafiro.Avalonia.FileExplorer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Zafiro.Avalonia.FileExplorer.Views.FolderContentsView"
             x:DataType="viewModels:FolderContentsViewModel">
	<DockPanel>
		<DockPanel DockPanel.Dock="Top">
			<Button Content="Back" Command="{Binding GoBack}" DockPanel.Dock="Left" />
			<Button Content="Load" Command="{Binding GoToPath}" DockPanel.Dock="Right" />
			<Panel>
				<ProgressBar VerticalAlignment="Stretch" IsIndeterminate="True" IsVisible="{Binding IsNavigating^}" />
				<TextBox Text="{Binding RequestedPath}" VerticalAlignment="Center" />
			</Panel>
		</DockPanel>
		<ContentControl Content="{Binding Details}" />
	</DockPanel>
</UserControl>

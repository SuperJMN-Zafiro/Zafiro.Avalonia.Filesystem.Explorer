<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Zafiro.Avalonia.FileExplorer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Zafiro.Avalonia.FileExplorer.Views.FolderView"
             x:DataType="viewModels:FolderViewModel">
	<DockPanel>
		<Button DockPanel.Dock="Top" Content="Load" Command="{Binding Load}" />
		<DockPanel>
            <TextBlock Text="{Binding Name}" DockPanel.Dock="Left" />
            <ListBox ItemsSource="{Binding Children}" />
		</DockPanel>
	</DockPanel>
</UserControl>
